<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_lich_su_thay_doi_form" model="ir.ui.view">
            <field name="name">lich_su_thay_doi</field>
            <field name="model">lich_su_thay_doi</field>
            <field name="arch" type="xml">
                <form create="false">
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Lịch sử thay đổi</div>
                        <group col="4" string="Thông tin chung">
                            
                            <field name="phong_id"/>
                            <field name="nguoi_muon_id"/>
                            <field name="thoi_gian_muon_du_kien"/>
                            <field name="thoi_gian_muon_thuc_te"/>
                            <field name="thoi_gian_tra_du_kien"/>
                            <field name="thoi_gian_tra_thuc_te"/>
                            <field name="trang_thai"/>
                            <field name="ngay_thay_doi"/>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_lich_su_thay_doi_tree" model="ir.ui.view">
            <field name="name">lich_su_thay_doi</field>
            <field name="model">lich_su_thay_doi</field>
            <field name="arch" type="xml">
                <tree create="false">
                    
                    <field name="phong_id"/>
                    <field name="nguoi_muon_id"/>
                    <field name="thoi_gian_muon_du_kien"/>
                    <field name="thoi_gian_muon_thuc_te"/>
                    <field name="thoi_gian_tra_du_kien"/>
                    <field name="thoi_gian_tra_thuc_te"/>
                    <field name="trang_thai"/>
                    <field name="ngay_thay_doi"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="lich_su_thay_doi_search">
            <field name="model">lich_su_thay_doi</field>
            <field name="arch" type="xml">
                <search>
                    
                    <field name="phong_id"/>
                    <field name="nguoi_muon_id"/>
                    <field name="thoi_gian_muon_du_kien"/>
                    <field name="thoi_gian_muon_thuc_te"/>
                    <field name="thoi_gian_tra_du_kien"/>
                    <field name="thoi_gian_tra_thuc_te"/>
                    <field name="trang_thai"/>
                    <field name="ngay_thay_doi"/>
                </search>
            </field>
        </record>

        <record id="action_lich_su_thay_doi" model="ir.actions.act_window">
            <field name="name">Lịch sử thay đổi</field>
            <field name="res_model">lich_su_thay_doi</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "lich_su_thay_doi_search"/>
        </record>
    </data>
</odoo>
        
    