<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_phieu_luong_tree" model="ir.ui.view">
            <field name="name">phieu_luong.tree</field>
            <field name="model">phieu_luong</field>
            <field name="arch" type="xml">
                <tree string="Phiếu lương">
                    <field name="nhan_vien_id"/>
                    <field name="ngay_tu"/>
                    <field name="ngay_den"/>
                    <field name="trang_thai"/>
                    <field name="luong_co_ban"/>
                    <field name="tong_phu_cap"/>
                    <field name="tien_tang_ca"/>
                    <field name="tru_thieu_gio"/>
                    <field name="tru_bao_hiem"/>
                    <field name="thuc_nhan"/>
                </tree>
            </field>
        </record>

        <record id="view_phieu_luong_form" model="ir.ui.view">
            <field name="name">phieu_luong.form</field>
            <field name="model">phieu_luong</field>
            <field name="arch" type="xml">
                <form string="Phiếu lương">
                    <header>
                        <button name="action_tinh_luong" type="object" string="Tính lương"
                                class="btn-primary"
                                attrs="{'invisible':[('trang_thai','not in',['nhap','da_tinh'])]}"/>

                        <button name="action_chot" type="object" string="Chốt"
                                class="btn-secondary"
                                attrs="{'invisible':[('trang_thai','!=','da_tinh')]}"/>

                        <button name="action_da_tra" type="object" string="Đã trả"
                                class="btn-secondary"
                                attrs="{'invisible':[('trang_thai','!=','da_chot')]}"/>

                        <button name="action_ve_nhap" type="object" string="Về nháp"
                                class="btn-secondary"
                                attrs="{'invisible':[('trang_thai','not in',['nhap','da_tinh'])]}"/>

                        <field name="trang_thai" widget="statusbar"
                               statusbar_visible="nhap,da_tinh,da_chot,da_tra"/>
                    </header>

                    <sheet>
                        <div class="oe_title"><h1>Phiếu lương</h1></div>

                        <group col="4">
                            <field name="nhan_vien_id"/>
                            <field name="ngay_tu"/>
                            <field name="ngay_den"/>
                            <field name="hop_dong_id" readonly="1"/>

                            <field name="don_gia_gio" readonly="1"/>
                            <field name="tong_gio_thieu" readonly="1"/>
                            <field name="tong_gio_ot" readonly="1"/>
                            <field name="so_ngay_nghi_co_luong" readonly="1"/>
                            <field name="so_ngay_nghi_khong_luong" readonly="1"/>
                        </group>

                        <group string="Tổng hợp tiền">
                            <group col="4">
                                <field name="luong_co_ban" readonly="1"/>
                                <field name="tong_phu_cap" readonly="1"/>
                                <field name="tien_tang_ca" readonly="1"/>
                                <field name="tru_thieu_gio" readonly="1"/>
                                <field name="tru_bao_hiem"/>
                                <field name="thuc_nhan" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Chi tiết">
                                <field name="dong_ids">
                                    <tree editable="bottom">
                                        <field name="sequence"/>
                                        <field name="ma"/>
                                        <field name="ten"/>
                                        <field name="so_tien"/>
                                        <field name="ghi_chu"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Ghi chú">
                                <field name="ghi_chu"/>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_phieu_luong_search" model="ir.ui.view">
            <field name="name">phieu_luong.search</field>
            <field name="model">phieu_luong</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm phiếu lương">
                    <field name="nhan_vien_id"/>
                    <field name="ngay_tu"/>
                    <field name="ngay_den"/>
                    <field name="trang_thai"/>
                    <separator/>
                    <filter string="Đã chốt" name="pl_da_chot" domain="[('trang_thai','=','da_chot')]"/>
                    <filter string="Đã trả" name="pl_da_tra" domain="[('trang_thai','=','da_tra')]"/>
                </search>
            </field>
        </record>

        <record id="action_phieu_luong" model="ir.actions.act_window">
            <field name="name">Phiếu lương</field>
            <field name="res_model">phieu_luong</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_phieu_luong_search"/>
        </record>

    </data>
</odoo>
