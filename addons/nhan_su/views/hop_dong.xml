<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hop_dong_tree" model="ir.ui.view">
            <field name="name">hop_dong.tree</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <tree string="Hợp đồng">
                    <field name="nhan_vien_id"/>
                    <field name="loai_hop_dong"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="luong_cung_thang"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <record id="view_hop_dong_form" model="ir.ui.view">
            <field name="name">hop_dong.form</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <form string="Hợp đồng">
                    <header>
                        <button name="action_hieu_luc" type="object" string="Chuyển hiệu lực"
                                class="btn-primary"
                                attrs="{'invisible':[('trang_thai','!=','nhap')]}"/>

                        <button name="action_het_hieu_luc" type="object" string="Hết hiệu lực"
                                class="btn-secondary"
                                attrs="{'invisible':[('trang_thai','!=','hieu_luc')]}"/>

                        <field name="trang_thai" widget="statusbar"
                               statusbar_visible="nhap,hieu_luc,het_hieu_luc"/>
                    </header>

                    <sheet>
                        <div class="oe_title"><h1>Hợp đồng</h1></div>

                        <group col="4">
                            <field name="nhan_vien_id"/>
                            <field name="loai_hop_dong"/>

                            <field name="ngay_bat_dau"/>
                            <field name="ngay_ket_thuc"/>

                            <field name="luong_cung_thang"/>
                            <field name="so_ngay_cong_chuan"/>
                            <field name="so_gio_mot_ngay"/>

                            <field name="ghi_chu"/>
                        </group>

                        <notebook>
                            <page string="Phụ cấp cố định">
                                <field name="phu_cap_ids" context="{'default_hop_dong_id': id}">
                                    <tree editable="bottom">
                                        <field name="loai_phu_cap_id"/>
                                        <field name="so_tien"/>
                                        <field name="ghi_chu"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hop_dong_search" model="ir.ui.view">
            <field name="name">hop_dong.search</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm hợp đồng">
                    <field name="nhan_vien_id"/>
                    <field name="loai_hop_dong"/>
                    <field name="trang_thai"/>
                    <separator/>
                    <filter string="Hiệu lực" name="hd_hieu_luc" domain="[('trang_thai','=','hieu_luc')]"/>
                </search>
            </field>
        </record>

        <record id="action_hop_dong" model="ir.actions.act_window">
            <field name="name">Hợp đồng</field>
            <field name="res_model">hop_dong</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hop_dong_search"/>
        </record>

    </data>
</odoo>
