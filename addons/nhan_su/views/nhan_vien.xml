<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_nhan_vien_form" model="ir.ui.view">
            <field name="name">nhan_vien.form</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <form string="Nhân viên">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ho_ten" placeholder="Họ tên..."/>
                            </h1>
                        </div>

                        <group col="4" string="Thông tin chung">
                            <field name="ma_dinh_danh"/>

                            <field name="trang_thai"/>
                            <field name="ngay_nghi_viec"
                                   attrs="{'invisible':[('trang_thai','=','dang_lam')],
                                           'required':[('trang_thai','=','da_nghi')]}"/>

                            <field name="phong_ban_id"/>
                            <field name="chuc_vu_id"/>
                            <field name="quan_ly_id"/>

                            <field name="ngay_sinh"/>
                            <field name="que_quan"/>
                            <field name="email"/>
                            <field name="so_dien_thoai"/>
                            <field name="so_bhxh"/>
                            <field name="dia_chi"/>

                            <field name="luong" readonly="1"/>
                            <field name="active" invisible="1"/>
                        </group>

                        <notebook>

                            <page string="Hợp đồng">
                                <field name="hop_dong_ids" context="{'default_nhan_vien_id': id}">
                                    <tree editable="bottom">
                                        <field name="loai_hop_dong"/>
                                        <field name="ngay_bat_dau"/>
                                        <field name="ngay_ket_thuc"/>
                                        <field name="luong_cung_thang"/>
                                        <field name="so_ngay_cong_chuan"/>
                                        <field name="so_gio_mot_ngay"/>
                                        <field name="trang_thai"/>
                                    </tree>

                                    <form string="Hợp đồng">
                                        <sheet>
                                            <group col="4">
                                                <field name="nhan_vien_id" readonly="1"/>
                                                <field name="loai_hop_dong"/>
                                                <field name="trang_thai" readonly="1"/>

                                                <field name="ngay_bat_dau"/>
                                                <field name="ngay_ket_thuc"/>

                                                <field name="luong_cung_thang"/>
                                                <field name="so_ngay_cong_chuan"/>
                                                <field name="so_gio_mot_ngay"/>
                                                <field name="ghi_chu"/>
                                            </group>

                                            <group string="Phụ cấp cố định">
                                                <field name="phu_cap_ids" context="{'default_hop_dong_id': id}">
                                                    <tree editable="bottom">
                                                        <field name="loai_phu_cap_id"/>
                                                        <field name="so_tien"/>
                                                        <field name="ghi_chu"/>
                                                    </tree>
                                                </field>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>

                            <page string="Lịch sử công tác">
                                <field name="lich_su_cong_tac_ids" context="{'default_nhan_vien_id': id}">
                                    <tree editable="bottom">
                                        <field name="phong_ban_id"/>
                                        <field name="chuc_vu_id"/>
                                        <field name="ngay_bat_dau"/>
                                        <field name="ngay_ket_thuc"/>
                                        <field name="trang_thai" readonly="1"/>
                                        <field name="ly_do"/>
                                    </tree>

                                    <form string="Lịch sử công tác">
                                        <sheet>
                                            <group col="4">
                                                <field name="nhan_vien_id" readonly="1"/>
                                                <field name="phong_ban_id"/>
                                                <field name="chuc_vu_id"/>
                                                <field name="ngay_bat_dau"/>
                                                <field name="ngay_ket_thuc"/>
                                                <field name="trang_thai" readonly="1"/>
                                                <field name="ly_do"/>
                                                <field name="ghi_chu"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>

                            <page string="Chứng chỉ">
                                <field name="chung_chi_ids" context="{'default_nhan_vien_id': id}">
                                    <tree editable="bottom">
                                        <field name="ma_chung_chi"/>
                                        <field name="ten_chung_chi"/>
                                        <field name="don_vi_cap"/>
                                        <field name="ngay_cap"/>
                                        <field name="ngay_het_han"/>
                                        <field name="trang_thai" readonly="1"/>
                                    </tree>

                                    <form string="Chứng chỉ">
                                        <sheet>
                                            <group col="4">
                                                <field name="nhan_vien_id" readonly="1"/>
                                                <field name="ma_chung_chi"/>
                                                <field name="ten_chung_chi"/>
                                                <field name="don_vi_cap"/>
                                                <field name="ngay_cap"/>
                                                <field name="ngay_het_han"/>
                                                <field name="trang_thai" readonly="1"/>
                                                <field name="ghi_chu"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>

                            <page string="Chấm công">
                                <field name="cham_cong_ids" context="{'default_nhan_vien_id': id}">
                                    <tree editable="bottom">
                                        <field name="ngay"/>
                                        <field name="gio_vao"/>
                                        <field name="gio_ra"/>
                                        <field name="gio_nghi_trua"/>
                                        <field name="so_gio_lam" readonly="1"/>
                                        <field name="so_gio_thieu" readonly="1"/>
                                        <field name="trang_thai"/>
                                    </tree>

                                    <form string="Chấm công">
                                        <sheet>
                                            <group col="4">
                                                <field name="nhan_vien_id" readonly="1"/>
                                                <field name="ngay"/>
                                                <field name="gio_vao"/>
                                                <field name="gio_ra"/>
                                                <field name="gio_nghi_trua"/>
                                                <field name="so_gio_lam" readonly="1"/>
                                                <field name="so_gio_thieu" readonly="1"/>
                                                <field name="trang_thai"/>
                                                <field name="ghi_chu"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_nhan_vien_tree" model="ir.ui.view">
            <field name="name">nhan_vien.tree</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <tree string="Nhân viên">
                    <field name="ma_dinh_danh"/>
                    <field name="ho_ten"/>
                    <field name="phong_ban_id"/>
                    <field name="chuc_vu_id"/>
                    <field name="trang_thai"/>
                    <field name="email"/>
                    <field name="so_dien_thoai"/>
                    <field name="so_bhxh"/>
                    <field name="luong" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="nhan_vien_search" model="ir.ui.view">
            <field name="name">nhan_vien.search</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_dinh_danh"/>
                    <field name="ho_ten"/>
                    <field name="phong_ban_id"/>
                    <field name="chuc_vu_id"/>
                    <field name="trang_thai"/>
                    <field name="email"/>
                    <field name="so_bhxh"/>

                    <separator/>
                    <filter string="Đang làm" name="nv_dang_lam" domain="[('trang_thai','=','dang_lam')]"/>
                    <filter string="Đã nghỉ" name="nv_da_nghi" domain="[('trang_thai','=','da_nghi')]"/>
                </search>
            </field>
        </record>

        <record id="action_nhan_vien" model="ir.actions.act_window">
            <field name="name">Nhân viên</field>
            <field name="res_model">nhan_vien</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="nhan_vien_search"/>
        </record>

    </data>
</odoo>
