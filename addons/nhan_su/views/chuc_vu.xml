<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_chuc_vu" model="ir.actions.act_window">
            <field name="name">Chức vụ</field>
            <field name="res_model">chuc_vu</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_chuc_vu_tree" model="ir.ui.view">
            <field name="name">chuc_vu.tree</field>
            <field name="model">chuc_vu</field>
            <field name="arch" type="xml">
                <tree string="Chức vụ">
                    <field name="ma"/>
                    <field name="ten"/>
                    <field name="phong_ban_id"/>
                    <field name="luong_cung"/>
                    <field name="tro_cap"/>
                </tree>
            </field>
        </record>

        <record id="view_chuc_vu_form" model="ir.ui.view">
            <field name="name">chuc_vu.form</field>
            <field name="model">chuc_vu</field>
            <field name="arch" type="xml">
                <form string="Chức vụ">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ten" placeholder="Tên chức vụ..."/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="ma"/>
                                <field name="ten"/>
                                <field name="phong_ban_id"/>
                            </group>
                            <group string="Khung lương">
                                <field name="luong_cung"/>
                                <field name="tro_cap"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Mô tả công việc (JD)">
                                <field name="jd"/>
                            </page>

                            <page string="Phụ cấp mặc định">
                                <field name="phu_cap_mac_dinh_ids" context="{'default_chuc_vu_id': id}">
                                    <tree editable="bottom">
                                        <field name="loai_phu_cap_id"/>
                                        <field name="so_tien"/>
                                        <field name="ghi_chu"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Ghi chú">
                                <field name="ghi_chu"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
