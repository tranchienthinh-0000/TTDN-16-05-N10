<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_phu_cap_chuc_vu_tree" model="ir.ui.view">
            <field name="name">phu_cap_chuc_vu.tree</field>
            <field name="model">phu_cap_chuc_vu</field>
            <field name="arch" type="xml">
                <tree string="Phụ cấp chức vụ">
                    <field name="chuc_vu_id"/>
                    <field name="loai_phu_cap_id"/>
                    <field name="so_tien"/>
                </tree>
            </field>
        </record>

        <record id="view_phu_cap_chuc_vu_form" model="ir.ui.view">
            <field name="name">phu_cap_chuc_vu.form</field>
            <field name="model">phu_cap_chuc_vu</field>
            <field name="arch" type="xml">
                <form string="Phụ cấp chức vụ">
                    <sheet>
                        <div class="oe_title"><h1>Phụ cấp chức vụ</h1></div>
                        <group col="4">
                            <field name="chuc_vu_id"/>
                            <field name="loai_phu_cap_id"/>
                            <field name="so_tien"/>
                            <field name="ghi_chu"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_phu_cap_chuc_vu_search" model="ir.ui.view">
            <field name="name">phu_cap_chuc_vu.search</field>
            <field name="model">phu_cap_chuc_vu</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm phụ cấp chức vụ">
                    <field name="chuc_vu_id"/>
                    <field name="loai_phu_cap_id"/>
                </search>
            </field>
        </record>

        <record id="action_phu_cap_chuc_vu" model="ir.actions.act_window">
            <field name="name">Phụ cấp chức vụ</field>
            <field name="res_model">phu_cap_chuc_vu</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_phu_cap_chuc_vu_search"/>
        </record>

    </data>
</odoo>
