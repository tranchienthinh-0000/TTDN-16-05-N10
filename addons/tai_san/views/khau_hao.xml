<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_khau_hao_form" model="ir.ui.view">
      <field name="name">khau_hao_form</field>
      <field name="model">khau_hao</field>
      <field name="arch" type="xml">
        <form string="Thông tin khấu hao">
          <sheet>
            <group col="2">
              <group string="Thông tin cơ bản">
                <field name="ma_khau_hao" readonly="1"/>
                <field name="ngay_khau_hao" required="1"/>
              </group>

              <group string="Giá trị">
                <field name="currency_id" invisible="1"/>
                <field name="gia_tri_khau_hao" widget="monetary" required="1"/>
              </group>
            </group>

            <group string="Tài sản liên quan">
              <field name="tai_san_id" required="1"/>
            </group>

            <group string="Ghi chú">
              <field name="ghi_chu"/>
            </group>
          </sheet>

          <chatter/>
        </form>
      </field>
    </record>

    <record id="view_khau_hao_tree" model="ir.ui.view">
      <field name="name">khau_hao_tree</field>
      <field name="model">khau_hao</field>
      <field name="arch" type="xml">
        <tree string="Danh sách khấu hao">
          <field name="ma_khau_hao"/>
          <field name="ngay_khau_hao"/>
          <field name="currency_id" invisible="1"/>
          <field name="gia_tri_khau_hao" widget="monetary"/>
          <field name="tai_san_id"/>
        </tree>
      </field>
    </record>

    <record id="view_khau_hao_kanban" model="ir.ui.view">
      <field name="name">khau_hao_kanban</field>
      <field name="model">khau_hao</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="ma_khau_hao"/>
          <field name="ngay_khau_hao"/>
          <field name="currency_id"/>
          <field name="gia_tri_khau_hao"/>
          <field name="tai_san_id"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_card">
                <div class="o_kanban_content">
                  <strong><field name="ma_khau_hao"/></strong>
                  <div>Ngày khấu hao: <field name="ngay_khau_hao"/></div>
                  <div>Giá trị: <field name="gia_tri_khau_hao" widget="monetary"/></div>
                  <div class="text-muted">Tài sản: <field name="tai_san_id"/></div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record id="action_khau_hao" model="ir.actions.act_window">
      <field name="name">Khấu hao</field>
      <field name="res_model">khau_hao</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

  </data>
</odoo>
