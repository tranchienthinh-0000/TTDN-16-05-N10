<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_lich_su_dieu_chuyen_form" model="ir.ui.view">
      <field name="name">lich_su_dieu_chuyen_form</field>
      <field name="model">lich_su_dieu_chuyen</field>
      <field name="arch" type="xml">
        <form string="Lịch sử điều chuyển tài sản">
          <sheet>
            <group col="2" string="Thông tin điều chuyển">
              <field name="tai_san_id" placeholder="Chọn tài sản..." required="1"/>
              <field name="vi_tri_chuyen_id" placeholder="Chọn vị trí chuyển..." required="1"/>
              <field name="vi_tri_den_id" placeholder="Chọn vị trí đến..." required="1"/>
              <field name="ngay_di_chuyen" required="1"/>
            </group>

            <group string="Ghi chú">
              <field name="ghi_chu" placeholder="Ghi chú thêm..."/>
            </group>
          </sheet>

          <chatter/>
        </form>
      </field>
    </record>

    <record id="view_lich_su_dieu_chuyen_tree" model="ir.ui.view">
      <field name="name">lich_su_dieu_chuyen_tree</field>
      <field name="model">lich_su_dieu_chuyen</field>
      <field name="arch" type="xml">
        <tree string="Danh sách lịch sử điều chuyển">
          <field name="tai_san_id"/>
          <field name="vi_tri_chuyen_id"/>
          <field name="vi_tri_den_id"/>
          <field name="ngay_di_chuyen"/>
          <field name="ghi_chu"/>
        </tree>
      </field>
    </record>

    <record id="lich_su_dieu_chuyen_search" model="ir.ui.view">
      <field name="name">lich_su_dieu_chuyen_search</field>
      <field name="model">lich_su_dieu_chuyen</field>
      <field name="arch" type="xml">
        <search string="Tìm kiếm lịch sử điều chuyển">
          <field name="tai_san_id"/>
          <field name="vi_tri_chuyen_id"/>
          <field name="vi_tri_den_id"/>
          <field name="ngay_di_chuyen"/>
          <field name="ghi_chu"/>
          <group expand="1" string="Lọc theo">
            <filter name="group_tai_san" string="Tài sản" context="{'group_by': 'tai_san_id'}"/>
            <filter name="group_vi_tri_chuyen" string="Vị trí chuyển" context="{'group_by': 'vi_tri_chuyen_id'}"/>
            <filter name="group_vi_tri_den" string="Vị trí đến" context="{'group_by': 'vi_tri_den_id'}"/>
            <filter name="group_ngay" string="Ngày điều chuyển" context="{'group_by': 'ngay_di_chuyen'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="action_lich_su_dieu_chuyen" model="ir.actions.act_window">
      <field name="name">Lịch sử điều chuyển</field>
      <field name="res_model">lich_su_dieu_chuyen</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="lich_su_dieu_chuyen_search"/>
      <field name="context">{}</field>
    </record>

  </data>
</odoo>
